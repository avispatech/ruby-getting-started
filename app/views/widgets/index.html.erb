<div class="container">
  <h1>Listing widgets</h1>

  <table class="table">
    <thead>
      <tr>
        <th>SKU</th>
        <th>Name</th>
        <th>Stock</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @widgets.each do |widget| %>
        <tr>
          <td><%= widget.sku %></td>
          <td><%= widget.name %></td>
          <td><%= widget.stock %></td>
          <td><%= link_to 'Show', widget %></td>
          <td><%= link_to 'Edit', edit_widget_path(widget) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Widget', new_widget_path %>

</div>